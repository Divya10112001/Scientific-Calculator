<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:textAlignment="center"
    tools:context=".dec">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="346dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:text="@string/text4"
        android:textColor="#ffffff	"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/conversion"
        android:layout_width="199dp"
        android:layout_height="62dp"
        android:layout_marginTop="72dp"
        android:background="#09FD86"
        android:onClick="convert"
        android:text="@string/text3"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:backgroundTint="#838996"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decimal" />

    <EditText
        android:id="@+id/decimal"
        android:layout_width="287dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="ENTER DECIMAL NUMBER"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColorLink="#F4F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/binary"
        android:layout_width="165dp"
        android:layout_height="53dp"
        android:layout_marginTop="52dp"
        android:background="#1B1616"
        android:textAlignment="center"
        android:textColor="#F6F1F1"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conversion" />

    <TextView
        android:id="@+id/hexa"
        android:layout_width="171dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:background="#0C0B0B"
        android:textAlignment="center"
        android:textColor="#F8F3F3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/binary" />

    <TextView
        android:id="@+id/octa"
        android:layout_width="168dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:background="#151414"
        android:textAlignment="center"
        android:textColor="#F8F4F4"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hexa" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="207dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:background="#090808"
        android:text="HEXADECIMAL="
        android:textAlignment="center"
        android:textColor="#EDE7E7"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/hexa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="190dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="360dp"
        android:background="#121111"
        android:text=" BINARY ="
        android:textAlignment="center"
        android:textColor="#F4F3F3"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="206dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:background="#131313"
        android:text="OCTAL ="
        android:textAlignment="center"
        android:textColor="#F4F0F0"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/octa"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />





</androidx.constraintlayout.widget.ConstraintLayout>