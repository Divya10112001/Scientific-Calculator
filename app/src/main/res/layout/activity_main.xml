<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C40817B"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="368dp"
        android:layout_marginTop="88dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <Button
            android:id="@+id/trigonometry"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:onClick="trigonometry"
            android:text="TRIGONOMETRIIC CALCULATIONS"
            android:textAlignment="center"
            android:textColor="#F41717"
            android:textSize="22sp"
            android:textStyle="bold"
            app:backgroundTint="#121010"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="312dp" />

        <Button
            android:id="@+id/calculator"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:onClick="calculate"
            android:text="SIMPLE CALCULATOR"
            android:textAlignment="center"
            android:textColor="#F41717"
            android:textSize="22sp"
            android:textStyle="bold"
            app:backgroundTint="#121010"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="208dp" />

        <Button
            android:id="@+id/conversion2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:onClick="conversion"
            android:text="DECIMAL CONVERSION"
            android:textAlignment="center"
            android:textColor="#F41717"
            android:textSize="22sp"
            android:textStyle="bold"
            app:backgroundTint="#121010"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="434dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="239dp"
        android:layout_height="91dp"
        android:layout_marginTop="16dp"
        android:text="SCIENTIFIC CALCULATOR"
        android:textAlignment="center"
        android:textColor="#FF4081"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>